@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Password Reset Link Sent";
}

<div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="my-4 fw-bold">Password reset link sent.</h2>
                </div>
                <div class="card-body p-4 text-center">
                    <div class="mb-4">
                        <i class="fas fa-envelope fa-5x text-primary mb-3"></i>
                    </div>
                    <h4 class="mb-3">Check your e-mail</h4>
                    <p class="text-muted">
                        We have sent a password reset link to Your e-mail address.
                    </p>
                    <p class="text-muted">
                        Please check Your inbox (and spam/junk folder).
                    </p>
                    <hr class="my-4" />
                    <p>
                        <a asp-page="./Login" class="btn btn-outline-primary">Back to Login</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>