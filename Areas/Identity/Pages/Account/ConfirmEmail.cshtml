@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Potwierdź adres e-mail";
}

<h1>@ViewData["Title"]</h1>

<partial name="_StatusMessage" model="Model.StatusMessage" />

@if (Model.StatusMessage.Contains("Dziękujemy za potwierdzenie", StringComparison.OrdinalIgnoreCase))
{
    <div class="mt-4 text-center">
        <p class="lead">Twoje konto jest teraz aktywne!</p>
        <a asp-page="./Login" class="btn btn-primary btn-lg">Zaloguj się</a>
    </div>
}
else
{
    <div class="mt-4 text-center">
        <p class="text-danger">Wystąpił problem z potwierdzeniem konta.</p>
        <a asp-page="./Register" class="btn btn-outline-secondary">Powróć do rejestracji</a>
    </div>
}