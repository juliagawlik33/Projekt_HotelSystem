@model HotelSystem.Models.ViewModels.EditRoomViewModel

@{
    ViewData["Title"] = "Edytuj pokój";
}

<h2>Edytuj pokój</h2>
@* <div asp-validation-summary="All" class="text-danger mb-3"></div> *@
<form asp-action="EditRoom" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group mb-3">
        <label asp-for="Number" class="control-label">Numer pokoju</label>
        <input asp-for="Number" class="form-control" />
        <span asp-validation-for="Number" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="RoomTypeId" class="control-label">Typ pokoju</label>
        <select asp-for="RoomTypeId" class="form-control" asp-items="ViewBag.RoomTypes">
            <option value="">-- Wybierz typ --</option>
        </select>
        <span asp-validation-for="RoomTypeId" class="text-danger"></span>
    </div>
    <div class="mt-4">
        <button type="submit" class="btn btn-success">Zapisz zmiany</button>
        <a href="@(Url.Action("Reservations", "Admin") + "#rooms")" class="btn btn-secondary">Anuluj</a>
    </div>
</form>