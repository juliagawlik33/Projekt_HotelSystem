@model List<HotelSystem.Models.Room>

<h2>Pokoje</h2>
<a href="/Admin/AddRoom">Dodaj nowy pokój</a>
<table class="table">
    <thead>
        <tr>
            <th>Numer</th>
            <th>Typ</th>
            <th>Cena/noc</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>@room.Number</td>
                <td>@room.RoomType.Name</td>
                <td>@room.RoomType.PricePerNight</td>
            </tr>
        }
    </tbody>
</table>
<a href="/Admin/RoomTypes">Edytuj ceny typów pokoi</a>