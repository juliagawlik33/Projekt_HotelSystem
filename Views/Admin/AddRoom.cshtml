@model HotelSystem.Models.ViewModels.EditRoomViewModel

@{
    ViewData["Title"] = "Dodaj nowy pokój";
}

<h2>Dodaj nowy pokój</h2>
@* <div asp-validation-summary="All" class="text-danger mb-3"></div> *@
<form asp-action="AddRoom" method="post">
    <div class="form-group mb-3">
        <label asp-for="Number" class="control-label"></label>
        <input asp-for="Number" class="form-control" />
        <span asp-validation-for="Number" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="RoomTypeId" class="control-label"></label>
        <select asp-for="RoomTypeId" class="form-control" asp-items="ViewBag.RoomTypes">
            <option value="">-- Wybierz typ --</option>
        </select>
        <span asp-validation-for="RoomTypeId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Dodaj pokój</button>
    <a href="@(Url.Action("Reservations", "Admin") + "#rooms")" class="btn btn-secondary">Anuluj</a>
</form>