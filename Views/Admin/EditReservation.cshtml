@model HotelSystem.Models.ViewModels.EditReservationViewModel

@{
    ViewData["Title"] = "Edytuj rezerwację";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0"><i class="fas fa-edit me-2"></i>Edytuj rezerwację</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="EditReservation" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="mb-4">
                            <label asp-for="StartDate" class="form-label fw-bold">Od:</label>
                            <input asp-for="StartDate" type="date" class="form-control" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="EndDate" class="form-label fw-bold">Do:</label>
                            <input asp-for="EndDate" type="date" class="form-control" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="RoomId" class="form-label fw-bold">Pokój:</label>
                            <select asp-for="RoomId" asp-items="ViewBag.Rooms" class="form-select"></select>
                            <span asp-validation-for="RoomId" class="text-danger"></span>
                        </div>
                        <div class="mt-5 d-flex justify-content-between align-items-center">
                            <a asp-action="Reservations" class="btn btn-secondary px-4">
                                <i class="fas fa-arrow-left"></i> Anuluj</a>
                            <button type="submit" class="btn btn-success px-4">
                                <i class="fas fa-save"></i> Zapisz</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}