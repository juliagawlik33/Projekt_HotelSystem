@model HotelSystem.Models.ViewModels.CreateReservationViewModel

@{
    ViewData["Title"] = "Zarezerwuj pokój";
}

<h2>Zarezerwuj pokój</h2>
<style>
        .form-group {
        margin-bottom: 15px;
    }
</style>

<form asp-action="Create" method="post">

    <div class="form-group">
        <label asp-for="StartDate">Data zameldowania</label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EndDate">Data wymeldowania</label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>Pokój</label>
        <select asp-for="RoomId"
                asp-items="ViewBag.Rooms"
                class="form-control">
        </select>
    </div>
    <button type="submit" class="btn btn-primary">
        Zarezerwuj
    </button>

</form>
