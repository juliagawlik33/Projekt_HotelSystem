@model HotelSystem.Models.ViewModels.CreateReservationViewModel

@{
    ViewData["Title"] = "Zarezerwuj pokój";
}

<h2>Zarezerwuj pokój</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @Html.ValidationSummary(false)
    </div>
}
<form asp-action="Create" method="post">

    <div class="reservation-form">
        <label asp-for="StartDate">Data zameldowania</label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>

    <div class="reservation-form">
        <label asp-for="EndDate">Data wymeldowania</label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>

    <div class="reservation-form">
        <label>Pokój</label>
        <select asp-for="RoomId"
                asp-items="ViewBag.Rooms"
                class="form-control">
        </select>
    </div>
    <button type="submit" class="btn btn-primary">
        Zarezerwuj
    </button>

</form>
